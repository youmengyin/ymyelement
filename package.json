{
  "name": "ymyelement",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "doc",
    "play"
  ],
  "scripts": {
    "build": "pnpm clean && vite build && pnpm run build:umd && pnpm run build:lib && pnpm run build:theme && node ./scripts/copyCommonInfo.js",
    "build:es": "vite build --mode=production ",
    "build:dev": "vue-tsc --noEmit && vite build --mode=production",
    "build:umd": "vue-tsc --noEmit && vite build --mode=production --config vite.config.umd.ts",
    "build:lib": "vue-tsc --noEmit && vite build --mode=production --config vite.config.lib.ts",
    "build:theme": "pnpm run -C packages/theme-chalk build",
    "clean": "rm -rf dist",
    "dev": "vite",
    "docs:dev": "pnpm run -C docs docs:dev",
    "docs:build": "pnpm run -C docs docs:build",
    "play": "pnpm run -C play dev",
    "preview": "vite preview",
    "prepare": "husky install",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint --fix --ext .js,.vue",
    "lint-staged": "lint-staged",
    "release": "standard-version"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@ymy/components": "workspace:*",
    "@ymy/docs": "workspace:*",
    "@ymy/play": "workspace:*",
    "@ymy/hooks": "workspace:*",
    "@ymy/theme-chalk": "workspace:*",
    "@ymy/tokens": "workspace:*",
    "@ymy/utils": "workspace:*",
    "async-validator": "^4.2.5",
    "mitt": "^3.0.0",
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.2",
    "chalk": "^5.0.1",
    "eslint": "^8.17.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-vue": "^9.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "sass": "^1.52.2",
    "standard-version": "^9.5.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vitest": "^0.18.1",
    "vue-tsc": "^0.34.7"
  },
  "engines": {
    "node": ">=14"
  },
  "pnpm":{
    "peerDependencyRules": {
      "ignoreMissing": ["react", "react-dom"]
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
